<mahApps:MetroWindow x:Class="AssemblyInfo.MainWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:local="clr-namespace:AssemblyInfo"
                     xmlns:views="clr-namespace:AssemblyInfo.Views"
                     xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
                     GlowBrush="{DynamicResource AccentColorBrush}"
                     ResizeMode="CanResizeWithGrip"
                     ShowMaxRestoreButton="False"
                     Title="AssemblyInfo"
                     Height="500" 
                     Width="300">
    <Grid Background="Transparent" Margin="10">
        <views:AssemblyInfoView DataContext="{Binding AssemblyInfoViewModel}" />
        <views:DropContainerView DataContext="{Binding DropContainerViewModel}" />
    </Grid>
</mahApps:MetroWindow>
